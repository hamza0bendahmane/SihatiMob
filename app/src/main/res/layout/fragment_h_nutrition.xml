<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".HNutrition">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/ic_border"
        android:minHeight="500dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/water"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:lineSpacingExtra="10dp"
            android:fontFamily="@font/montserrat"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="Staying hydrated is essential for overall health.
For a refreshing boost, you can add lemon slices, cucumber or mint.
Other drinks like unsweeted coffee or tea are also good alternatives for hydration. "
            android:textColor="@color/grr"
            android:textStyle="bold"
            android:textSize="10pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/montserrat"
            android:text="Stay Hydrated"
            android:textColor="@color/colorPrimary"
            android:textSize="14pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/water" />
    </androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.button.MaterialButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:id="@+id/go_back"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="20dp"
    app:cornerRadius="15dp"
    android:textStyle="bold"
    android:text="Go back to the guide"
    android:textColor="@color/white"/>


</FrameLayout>